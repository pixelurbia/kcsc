$column: golden-ratio(1em, 3) !default; // Column width
$gutter: golden-ratio(1em, 1) !default; // Gutter between each two columns
$grid-columns: 6; // Total number of columns in the grid
$max-width: 1400px; // Max-width of the outer container
$border-box-sizing: true !default; // Makes all elements have a border-box layout
$default-feature: min-width; // Default @media feature for the breakpoint() mixin

$tablet: max-width em(1080);
$ipad: max-width em(987);
$mobile: max-width em(600);
$d1: max-width em(1200);

$iphone5: max-width em(350);

$bigd: min-width em(1700);
