 $('#faqSearch').keyup(function(){
    var query = $(this).val().toLowerCase();
    if(query === ''){
        $('.question').removeClass('hide');
    } else {
        $('.question').each(function(){
            var faqText = $(this).find('h2').text().toString().toLowerCase();
            if(!faqText.match(query)){
                $(this).addClass('hide');
            } else {
                $(this).removeClass('hide');
            }
        });
    }
});

